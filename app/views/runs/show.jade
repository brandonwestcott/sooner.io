extends ../layout

block content
  h2= run.name

  table.table.table-bordered
    tbody
      tr
        th Ran
        td= run.ranAt && run.ranAt.toString('M/dd/yyyy h:mm:ss tt')
      tr
        th Completed
        td= run.completedAt && run.completedAt.toString('M/dd/yyyy h:mm:ss tt')
      tr
        th Job
        td
          a(href="/jobs/#{run.jobId}")= run.jobId
          |  
          a(href="/jobs/#{run.jobId}/edit")
            i.icon-pencil
      tr
        th Definition
        td.formatted= run.definition
      tr
        th Status
        td
          != statusIcon(run.status)
          | 
          = run.status
      tr
        th Output
        td.formatted= run.output
