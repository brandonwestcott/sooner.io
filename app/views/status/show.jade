extends ../layout

block content
  h3 Connected Nodes
  table#nodes.table.table-bordered.table-striped
    thead
      tr
        th Name
        th IP
        th Port
    tbody

  h3 Real-Time Log
  table#log.table.table-bordered.table-striped
    thead
      tr
        th Event
        th Data
        th Time
    tbody

  :coffeescript
    showLog()
    socket.on 'connect', showNodes
