form#workflow(action="/workflows/#{params.id || ''}", method='post')
  if params.id
    input(type='hidden', name='_method', value='put')
  fieldset(class=workflow.errors && 'errors')
    != field(workflow, 'name', {inputClass: 'input-xlarge'})
    != field(workflow, 'schedule', {inputClass: 'input-large', help: '"min hour day month dayofweek" (<a href="http://www.manpagez.com/man/5/crontab/">help</a>)'})
    != field(workflow, 'definition', {tag: 'textarea', inputClass: 'input-xxlarge'})
    .form-actions
      button.btn.btn-primary(type='submit') Save
