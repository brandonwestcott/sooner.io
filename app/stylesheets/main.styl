body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

h2 i
  vertical-align baseline

#main
  margin-top 25px;

textarea#definition, input#schedule, .formatted
  font 12pt Inconsolata, monospace
  white-space pre

textarea#definition
  width 99%
  height 400px

#queue-query
  display none
  .alert
    display none
  textarea
    width 440px
    height 50px
    &:first-child
      margin-right 15px

table
  .disabled
    text-decoration line-through

table td.actions
  a
    margin-right 15px

.right
  float right

.form-actions.right
  float none
  text-align right

.margin-left
  margin-left 15px

#run-data
  display none
  width 400px
  margin-bottom 0
  margin-right 10px

h2 .secondary
  color #999

td.data table td
  border-left none

.pagination
  text-align center

.control-bar
  background-color #eee
  padding 3px 10px
  border-radius 4px
  margin 5px 0

.clear
  clear both
  height 0
  overflow hidden
